{% extends 'layout_admin.html.twig' %}

{% block sidebar %}
    {% set sideNav = [
            {
                'title' : 'Tutoriel', 
                'link' : '/admin'
            },
            {
                'title' : 'Actualités', 
                'link' : '/admin/actualite'
            }
        ]      
    %}

    {% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}
 
    <a href="/admin/actualite/ajouter" class="btn bg-primary text-secondary mb-4 p-3">Créer une actualité</a>

    <h2>Toutes vos actualités : </h2>

    <ul class="p-0 d-flex flex-column gap-2">

        {% for actuality in actualities %}

        <li class="my-2 d-flex align-items-center">
            
            <p class="w-25 p-0 m-0">{{ actuality.date }}</p>
            <p class="w-50 p-0 m-0"> {{ actuality.title }} </p>
      

            <a href="/admin/actualite/modifier?id={{ actuality.id }}" class="btn bg-primary text-secondary mx-2 px-3 d-flex justify-content-center align-items-center admin-btn-edit p-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill me-2" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                </svg>
                <p class="m-0">Edit</p>
            </a>


        </li>

        {% endfor %}

    </ul>
    
{% endblock %}
