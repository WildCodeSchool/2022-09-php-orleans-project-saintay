{% extends 'layout_admin.html.twig' %}

{% block sidebar %}
    {% set sideNav = [
            {
                'title' : 'Retour', 
                'link' : '/admin/actualite'
            }
        ]      
    %}
    {% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}

    <h2>Ajouter une actualité</h2>

    <ul class="p-0 d-flex flex-column">
        {% for error in errors %}

            <li class="bg-danger text-secondary p-2 my-1 w-75">{{ error }}</li>

        {% endfor %}
    </ul>


    <form class="w-75" method="POST">
        <div class="form-group my-2">

            <label for="title">Titre de l'actualité</label>
            <input 
                name="title" 
                type="text" 
                class="form-control" 
                id="title" 
                aria-describedby="Titre de l'actualité"
                value="{% if actuality.title is defined %}{{actuality.title}}{% endif %}" 
                required 
            />
        
        </div>

        <div class="form-group my-2">
            <label for="date">Date</label>
            <input 
                name="date" 
                type="date" 
                class="form-control" 
                id="date" 
                aria-describedby="Date de l'actualité"
                value="{% if actuality.date is defined %}{{actuality.date}}{% endif %}" 
                required
            />
        </div>

        <div class="form-group my-2">
            <label for="description">Description</label>
            <textarea 
                name="description" 
                class="form-control" 
                id="description" 
                aria-describedby="Description de l'actualité"
                rows="3"
                required
            >{% if actuality.description is defined %}{{actuality.description}}{% endif %}</textarea>

        </div>

        <div class="form-group my-2">
            <label for="image">Lien de l'image</label>
            <input 
                name="image" 
                type="text" 
                class="form-control"  
                id="image" 
                aria-describedby="Lien de l'actualité" 
                placeholder="http://liens-de-mon-image.exemple"
                value="{% if actuality.image is defined %}{{actuality.image}}{% endif %}"
                required
            />
        </div>

        <div class="form-group my-2">
            <label for="link">Lien vers l'actualité</label>
            <input 
                name="link" 
                type="text" 
                class="form-control" 
                id="link" 
                aria-describedby="Lien de l'actualité" 
                placeholder="http://liens-vers-le-site-de-mon-actualite.exemple"
                value="{% if actuality.link is defined %}{{actuality.link}}{% endif %}"
                required
            />
        </div>

        
        <button type="submit" class="btn bg-primary text-secondary p-2 mt-3">Submit</button>
    </form>


{% endblock %}