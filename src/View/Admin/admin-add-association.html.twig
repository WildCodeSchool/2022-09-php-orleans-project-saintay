{% extends 'layout_admin.html.twig' %}

{% block sidebar %}
	{% set sideNav = [
            {
                'title' : 'Retour', 
                'link' : '/admin/association'
            }
        ]      
    %}
	{% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}

	<h2>Ajouter une association</h2>

	<ul class="p-0 d-flex flex-column">
		{% for error in errors %}

			<li class="bg-danger text-secondary p-2 my-1 w-75">{{ error }}</li>

		{% endfor %}
	</ul>


	<form class="w-75" method="POST">

		<div class="form-group my-2">
			<label for="image">Image :</label>
			<input name="image" type="text" class="form-control" id="image" aria-describedby="Lien de l'association" value="{% if association.image is defined %}{{association.image}}{% endif %}" required/>
		</div>

		<div class="form-group my-2">
			<label for="title">Titre de l'association :</label>
			<input name="title" type="text" class="form-control" id="title" aria-describedby="Titre de l'association" value="{% if association.title is defined %}{{association.title}}{% endif %}" required/>

		</div>

		<div class="form-group my-2">
			<label for="category">Categorie :</label>
			<input name="category" type="category" class="form-control" id="category" aria-describedby="Date de l'actualitÃ©" value="{% if association.category is defined %}{{association.category}}{% endif %}" required/>
		</div>

		<div class="form-group my-2">
			<label for="description">Description :</label>
			<textarea name="description" class="form-control" id="description" aria-describedby="Description de l'association" rows="3" required>
				{% if actuality.description is defined %}
					{{actuality.description}}
				{% endif %}
			</textarea>
		</div>

		<div class="form-group my-2">
			<label for="phone_number">Numero :</label>
			<input type="number" id="phone_number" name="phone_number" placeholder="+33 22 33 44 55 66" required>
		</div>

		<div class="d-flex justify-content-center w-100">
			<button type="button" class="btn bg-primary w-100 p-2">
				<img class="association-img-phone bg-primary" src="../assets/images/association_images/telephon.png" alt="Telephone"/>
				<span class="text-secondary">{{ association.phone_number }}</span>
			</button>
		</div>
		<button type="submit" class="btn bg-primary text-secondary p-2 mt-3">Submit</button>
	</form>

	<div>
		<a href="/admin/association" class="btn bg-primary text-secondary mt-3 mb-3 p-2">Retour</a>
	</div>


{% endblock %}
