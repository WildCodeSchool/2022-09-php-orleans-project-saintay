{% extends 'layout_admin.html.twig' %}

{% block sidebar %}
{% set sideNav = [
        {
            'title' : 'Tutoriel', 
            'link' : '/admin'
        },
        {
            'title' : 'Documents officiels', 
            'link' : '/admin/documents'
        }
    ]      
%}

{% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}

<a href="/admin/documents/ajouter" class="btn bg-primary text-secondary mb-4 p-3">Créer un document</a>


<h2>Tous vos documents : </h2>

<ul>
    {% for report in reports %}
    <li class="my-2 d-flex align-items-center">

        <p class="w-25 p-0 m-0">{{ report.date }}</p>
        <p class="w-50 p-0 m-0"> {{ report.title }} </p>

        <a href="/admin/documents/modifier?id={{ report.id }}" class="btn bg-primary text-secondary mx-2 px-3 d-flex justify-content-center align-items-center admin-btn-edit p-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill me-2" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                </svg>
                <p class="m-0">Edit</p>
        </a>

        <form action="/admin/documents/supprimer" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet document ? La suppression est irréversible...')">
                <input type="hidden" name="id" value="{{ report.id }}">
                <button class="btn bg-danger text-secondary mx-2 px-3 d-flex justify-content-center align-items-center admin-btn-edit p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill me-2" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                    </svg>
                    <span>Delete</span>
                </button>
        </form>
    </li>

    {% endfor %}

</ul>

{% endblock %}
