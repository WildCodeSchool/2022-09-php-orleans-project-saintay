{% block content %}

	<section class="p-2 p-lg-5">

		<h2 class="title mb-3">Les membres de l'équipe communale :</h2>
		<hr class="w-100 mb-5">
		<ul class="p-0 d-flex flex-column gap-2">

                <li class="my-2 d-flex align-items-center">
					<p class="w-25 p-0 m-0 text-decoration-underline">Nom Prénom</p>
					<p class="w-50 p-0 m-0 text-decoration-underline">Rôle</p>
				</li>

			{% for agent in communalTeam %}

				<li class="my-2 d-flex align-items-center">
					<p class="w-25 p-0 m-0">{{ agent.lastname|upper }} {{ agent.firstname }}</p>
					<p class="w-50 p-0 m-0">{{ agent.role }}</p>
				</li>

			{% endfor %}

		</ul>
	</section>

{% endblock %}