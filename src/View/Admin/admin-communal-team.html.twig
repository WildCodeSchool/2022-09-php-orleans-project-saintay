{% extends 'layout_admin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/association.css">
{% endblock %}

{% block sidebar %}
	{% set sideNav = [
 			{
                 'title' : 'Accueil', 
                 'link' : '/admin'
            },
            {
                 'title' : 'Actualités', 
                 'link' : '/admin/actualite'
            },
             {

                'title' : 'Mot du maire', 
                'link' : '/admin/mot-du-maire'
             },
            {

                 'title' : 'Associations', 
                 'link' : '/admin/association'
            },
            {
                 'title' : 'Équipe Municipale', 
                 'link' : '/admin/municipalite'
            },
            {
                 'title' : 'Équipe Communale', 
                 'link' : '/admin/equipe-communale'
            }, 
            {
                 'title' : 'Horaire de la mairie', 
                 'link' : '/admin/horaires'
            },
            {
                 'title' : 'Documents officiels', 
                 'link' : '/admin/documents'
            }
             
         ]      
     %}
	{% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}

	<section class="p-2 p-lg-5">

		<h2 class="title mb-3">Les membres de l'équipe communale :</h2>
		<hr class="w-100 mb-5">

		<a href="/admin/equipe-communale/ajouter" class="btn bg-primary text-secondary mb-4 p-3">Ajouter un agent</a>

		<ul>
			{% for agent in communalTeam %}

				<li class="my-2 d-flex align-items-center">
					<p class="w-25 p-0 m-0">{{ agent.lastname }}
						{{ agent.firstname }}</p>
					<p class="w-50 p-0 m-0">{{ agent.role }}</p>


					<a href="/admin/equipe-communale/modifer?agent={{ agent.id }}" class="btn bg-primary text-secondary mx-2 px-3 d-flex justify-content-center align-items-center admin-btn-edit p-2">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill me-2" viewbox="0 0 16 16">
							<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
						</svg>
						<p class="m-0">Éditer</p>
					</a>

					<form action="/admin/equipe-communale/delete" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette actualité ? La suppression est irréversible...')">
						<input type="hidden" name="id" value="{{ agent.id }}">
						<button class="btn bg-danger text-secondary mx-2 p-2 px-3 d-flex justify-content-center align-items-center">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill me-2" viewbox="0 0 16 16">
								<path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
							</svg>
							<span>Supprimer</span>
						</button>
					</form>

				{% endfor %}

			</ul>
		</section>

	{% endblock %}
