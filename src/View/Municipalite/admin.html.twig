{% extends 'layout_admin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/municipalite.css">
{% endblock %}

{% block sidebar %}
	{% set sideNav = [
            {
                'title' : 'Accueil', 
                'link' : '/admin'
            },
            {
                'title' : 'Actualités', 
                'link' : '/admin/actualite'
            },
            {
                'title' : 'Equipe Municipale', 
                'link' : 'admin/municipalite'
            }
    ]      
    %}

	{% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}

	<div class="container municipalityTeam">
		<h1 class="mt-5">L'équipe Municipale</h1>
		<div class="d-flex justify-content-center mb-5 mt-3">
			<img class="w-100" src="/../assets/images/Lequipe-Municipal.jpg" alt="L'équipe municipal">
		</div>
		<h2 class="mb-3">Organigramme de l'équipe Municipale</h2>

		<div class="row justify-content-center g-3">
			{% for employee in employees %}
				<div class="col-sm-3">
					<a class="adminFormTeam mb-3 mt-4 btn bg-success" href="municipalite/modifier?id= {{ employee.id }} ">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewbox="0 0 16 16">
							<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
						</svg>Modifier</a>
					<div class="card">
						<img class="card-img-top" src="{{ '../uploads/' ~ employee.image }}" alt="Card image cap">
						<div class="card-body">
							<h5 class="card-text">{{ employee.firstname }}
								{{employee.lastname}}
							</h5>
							<p class="card-text">{{ employee.role }}
							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

		<a class="adminFormTeam mb-3 mt-4 btn bg-primary" href="municipalite/ajouter">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
				<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
			</svg>Ajoutez un membre</a>

	{% endblock %}
