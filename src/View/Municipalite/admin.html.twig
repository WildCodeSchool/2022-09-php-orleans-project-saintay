{% extends 'layout_admin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/municipalite.css">
{% endblock %}

{% block sidebar %}
	{% set sideNav = [
        {
        }
    ]      
    %}

	{% include './Item/_sidebar.html.twig' %}
{% endblock %}

{% block content %}

	<div class="container municipalityTeam">
		<h1 class="mt-5">L'équipe Municipale</h1>
		<div class="d-flex justify-content-center mb-5 mt-3">
			<img class="w-100" src="/../assets/images/Lequipe-Municipal.jpg" alt="L'équipe municipal">
		</div>
		<h2 class="mb-3">Organigramme de l'équipe Municipale</h2>
		<div class="row justify-content-center g-3">
			{% for employee in employees %}
				<div class="col-sm-3">
					<form action="/admin/municipalite/delete" method="POST" onsubmit="return confirm('Etes vous sûr de vouloir supprimer le membre ?')">
						<input type="hidden" name="id" value="{{employee.id}}">
						<button class="adminFormTeam mb-3 mt-4 btn bg-danger">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewbox="0 0 16 16">
								<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
								<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
							</svg>
						</button>
					</form>
					<div class="card">
						<img class="card-img-top" src="{{ employee.image }}" alt="Portrait">
						<div class="card-body">
							<h5 class="card-text">{{ employee.firstname }}
								{{employee.lastname}}
							</h5>
							<p class="card-text">{{ employee.role }}
							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>


		<a class="adminFormTeam mb-3 mt-4 btn bg-primary" href="municipalite/ajouter">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
				<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
			</svg>Ajoutez un membre</a>


	{% endblock %}
